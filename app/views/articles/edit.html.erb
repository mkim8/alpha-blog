<h1>Edit an article</h1>

<% if @article.errors.any? %>
  <h2>The following errors prevented the article from being edited:</h2>
  <ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><BR/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><BR/>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Back to articles listening", articles_path %>